@page "/movie/category/{CategoryName}"
@if (!string.IsNullOrEmpty(Message))
{
    <div class="w-9/12 mx-auto">
        <div class="flex justify-center mb-96 mt-32 text-gray-400 text-2xl">
            <svg class="w-10 h-10" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path></svg>
            <h1>@Message</h1>
        </div>
    </div>
}

<div class="w-9/12 mx-auto">
    <div class="flex flex-wrap">
        @if (Movies == null)
        {

        }
        else
        {
            @foreach (var eachMovie in Movies)
            {
                <div class="w-full md:w-1/3 lg:w-1/6 p-2 relative">
                    <a @onmouseover="() => MouseOver(eachMovie.Id)" href="/movie/view/@eachMovie.Id" class="flex flex-col relative w-full bg-white overflow-hidden card translate-3d-none-after relative w-full bg-white overflow-hidden card translate-3d-none-after hover:border-gray-300">
                        <img @onmouseout="() => MouseOut(eachMovie.Id)" class="object-cover h-86 md:76" src="@eachMovie.PosterImage" />
                        <div class="transition duration-500 ease-in-out absolute right-0 bg-yellow-400 @(MouseEventMapbyMovieId[eachMovie.Id]? "opacity-100" : "opacity-0")">
                            <div class="text-xs font-bold p-1">
                                @eachMovie.Score
                            </div>
                        </div>
                        <div class="transition duration-500 ease-in-out absolute bottom-0 w-full text-center bg-black text-white font-thin pb-2 pt-2 opacity-0 @(MouseEventMapbyMovieId[eachMovie.Id]? "opacity-100" : "opacity-0")">
                            @eachMovie.Title
                        </div>
                    </a>
                </div>
            }
        }
    </div>
</div>
