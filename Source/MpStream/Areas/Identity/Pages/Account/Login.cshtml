@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>



    <form class="w-full m-auto" method="post">
        <div class="w-1/3">
            <h1 class="font-hairline mb-2 text-center">MP Stream - ระบบจัดการหลังบ้าน</h1>
            <div class="border-teal p-8 border-t-12 bg-white mb-36 rounded-lg shadow-lg">
                <div class="mb-4">
                    <label asp-for="Input.Email" class="font-bold text-grey-darker block mb-2"></label>
                    <Input asp-for="Input.Email" type="text" class="focus:ring-1 focus:ring-blue-600 w-full px-4 py-3 rounded shadow-sm focus:outline-none focus:shadow-outline text-gray-600 font-medium border border-solid border-gray-200" placeholder="Your Username"></Input>
                    <span asp-validation-for="Input.Email" class="text-red-700"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Input.Password" class="font-bold text-grey-darker block mb-2">Password</label>
                    <Input asp-for="Input.Password" type="password" class="focus:ring-1 focus:ring-blue-600 w-full px-4 py-3 rounded shadow-sm focus:outline-none focus:shadow-outline text-gray-600 font-medium border border-solid border-gray-200" placeholder="Your Password"></Input>
                    <span asp-validation-for="Input.Password" class="text-red-700"></span>
                </div>
                <div class="mb-4">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="flex items-center justify-between">
                    <button type="submit" value="Save" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                        Login
                    </button>
                </div>
            </div>
        </div>
    </form>


     

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
