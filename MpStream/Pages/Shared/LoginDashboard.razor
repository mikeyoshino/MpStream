
<EditForm Model="@user" OnValidSubmit="ValidateUser">
    <div class="bg-gray-600 h-screen">
        <div class="container mx-auto h-full flex justify-center items-center">
            <div class="w-1/3">
                <h1 class="font-hairline mb-2 text-center">MP Stream - ระบบจัดการหลังบ้าน</h1>
                <div class="border-teal p-8 border-t-12 bg-white mb-36 rounded-lg shadow-lg">
                    <div class="mb-4">
                        <label class="font-bold text-grey-darker block mb-2">Username or Email</label>
                        <InputText @bind-Value="user.Email" type="text" class="focus:ring-1 focus:ring-blue-600 w-full px-4 py-3 rounded shadow-sm focus:outline-none focus:shadow-outline text-gray-600 font-medium border border-solid border-gray-200" placeholder="Your Username"></InputText>
                    </div>

                    <div class="mb-4">
                        <label class="font-bold text-grey-darker block mb-2">Password</label>
                        <InputText @bind-Value="user.Password" type="password" class="focus:ring-1 focus:ring-blue-600 w-full px-4 py-3 rounded shadow-sm focus:outline-none focus:shadow-outline text-gray-600 font-medium border border-solid border-gray-200" placeholder="Your Password"></InputText>
                    </div>
                    <InputCheckbox @bind-Value="user.RememberMe"></InputCheckbox>
                    <div class="flex items-center justify-between">
                        <button type="submit" value="Save" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                            Login
                        </button>

                    </div>

                </div>
            </div>
        </div>
    </div>
</EditForm>
